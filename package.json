    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@types/jest": "26.0.14",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.8",
    "@types/node": "^14.11.2",
    "jest": "26.4.2",
    "prettier": "^2.1.2",
