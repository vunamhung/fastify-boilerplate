{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018", "es2015", "es2017", "esnext"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/__tests__/*.ts"]
}
